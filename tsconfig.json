{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "allowArbitraryExtensions": true,
    "skipLibCheck": true,
    "strict": true,
    "strictBindCallApply": true,
    "sourceMap": true,
    "inlineSources": true,
    "verbatimModuleSyntax": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "useDefineForClassFields": true,
    "useUnknownInCatchVariables": true
  },
  "include": ["scripts/**/*", "src/**/*", "test/**/*", "__demo/**/*", "vite.config.ts", "/*.cjs"],
  "exclude": ["node_modules", "dist/**/*", "scripts/**/*.js"]
}
